<% if alert = flash.alert %>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 my-4 sm:my-6">
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= inline_svg "icons/mini/x_circle.svg", class: "h-5 w-5 text-red-400" %>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-red-800"><%= alert %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% if notice = flash.notice %>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 my-4 sm:my-6">
    <div class="rounded-md bg-green-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= inline_svg "icons/mini/check_circle.svg", class: "h-5 w-5 text-green-400" %>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
